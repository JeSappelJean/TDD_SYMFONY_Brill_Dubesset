{% extends 'base.html.twig' %}

{% block title "Boutique" %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h1><i class="fas fa-store"></i> Boutique : 3 Rayons</h1>
        </div>
        <div class="card-body row">
        {% for category in categories %}
            <div class="col-md-4">
                <div class="card clickable" onclick="location = '{{ path('rayon', {idCategory : category.id}) }}'" >
                    <img src="{{ asset(category.visuel) }}" class="card-img-top" alt="{{ category.libelle }}">
                    <div class="card-body">
                        <h4 class="card-title">{{ category.libelle }}</h4>
                        <p class="card-text"><i>{{ category.texte }}</i></p>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}