{% extends "base.html.twig" %}

{% block title "Accueil" %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h1><i class="fas fa-home"></i> {{ 'index.titre' | trans }}</h1>
        </div>
        <div class="card-body">
            <div class="card clickable" onclick="location = '{{ path('boutique') }}'">
                <img src="/images/epicerie.jpg" class="card-img-top" alt="Logo Boutique Symfony">
                <div class="card-body">
                    <p class="card-text"><i>{{ 'index.texte' | trans }}</i></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}